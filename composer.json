{
    "name": "axytos/ecommerce-sdk",
    "version": "1.1.0",
    "authors": [
        {
            "name": "axytos GmbH",
            "email": "info@axytos.com",
            "homepage": "https://www.axytos.com"
        }
    ],
    "description": "Library for developing PHP-based e-commerce solutions connecting to the axytos API, i.e. shop plugins",
    "license": "proprietary",
    "type": "library",
    "require": {
        "php": ">=7.4.0",
        "axytos/financial-services-api-sdk": "^1.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Axytos\\ECommerce\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Axytos\\ECommerce\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@test-unit",
            "@phpstan"
        ],
        "test-unit": [
            "@phpunit --testsuite Unit"
        ],
        "test-integration": [
            "@phpunit --testsuite Integration"
        ],
        "phpunit": "./vendor/bin/phpunit --colors=always",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=1G"
    }
}