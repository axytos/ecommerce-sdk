{
    "name": "axytos/ecommerce-sdk",
    "version": "1.0.0",
    "description": "Library for developing PHP-based e-commerce solutions connecting to the axytos API, i.e. shop plugins",
    "license": "proprietary",
    "type": "library",
    "repositories": [
        {
            "type": "path",
            "url": "../financial-services-api-sdk"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "axytos/financial-services-api-sdk": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpmetrics/phpmetrics": "^2.7",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Axytos\\ECommerce\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Axytos\\ECommerce\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpstan"
        ],
        "phpunit": "./vendor/bin/phpunit --colors=always",
        "coverage": "./vendor/bin/phpunit --colors=always --coverage-html coverage --coverage-filter src",
        "metrics": "./vendor/bin/phpmetrics --report-html=metrics src",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=1G",
        "phpstan-pro": "./vendor/bin/phpstan analyse --memory-limit=1G --pro"
    }
}
